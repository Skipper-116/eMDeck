# eMDeck Configuration File
# Modify values as needed for each release.
# Enable/Disable Services
[DEFAULT]
ENABLE_EMR_API=true
ENABLE_DDE=true
ENABLE_FRONTEND=false
ENABLE_MYSQL=true
ENABLE_REDIS=true
ENABLE_NGINX=true
ENABLE_PORTAINER=true

# Docker Network Name
DOCKER_NETWORK=emastercard-network

# GitHub Repositories
EMR_API_REPO=git@github.com:HISMalawi/BHT-EMR-API.git
DDE_REPO=git@github.com:HISMalawi/Demographics-Data-Exchange.git
FRONTEND_REPO=git@github.com:EGPAFMalawiHIS/emc-new-arch.git

# RAILS Configuration
RAILS_MAX_THREADS=5

# MySQL Configuration (Shared)
MYSQL_ROOT_PASSWORD=root_password

# EMR Database Configuration
EMR_DATABASE=emr_db

# DDE Database Configuration
DDE_DATABASE=dde_db

# Portainer Admin Credentials
PORTAINER_ADMIN_USERNAME=admin
PORTAINER_ADMIN_PASSWORD=admin123
